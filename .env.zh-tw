# GPT-Load 繁體中文版環境配置檔案
# 複製此檔案為 .env 並根據需要修改配置

# ================================
# 基本配置
# ================================

# 管理端認證密鑰（必須修改）
AUTH_KEY=sk-123456

# 服務埠號
PORT=3001

# 服務綁定位址
HOST=0.0.0.0

# 時區設定
TZ=Asia/Taipei

# ================================
# 資料庫配置
# ================================

# SQLite 資料庫路徑（預設）
DATABASE_DSN=./data/gpt-load.db

# MySQL 資料庫連線（如果使用 MySQL）
# DATABASE_DSN=mysql://gptload:123456@mysql:3306/gpt_load?charset=utf8mb4&parseTime=True&loc=Local

# PostgreSQL 資料庫連線（如果使用 PostgreSQL）
# DATABASE_DSN=postgres://gptload:123456@postgres:5432/gpt_load?sslmode=disable

# ================================
# Redis 配置（可選）
# ================================

# Redis 連線字串（如果不設定則使用記憶體儲存）
# REDIS_DSN=redis://:123456@redis:6379/0

# ================================
# 伺服器配置
# ================================

# HTTP 伺服器讀取逾時（秒）
SERVER_READ_TIMEOUT=60

# HTTP 伺服器寫入逾時（秒）
SERVER_WRITE_TIMEOUT=600

# HTTP 連線閒置逾時（秒）
SERVER_IDLE_TIMEOUT=120

# 服務優雅關閉等待時間（秒）
SERVER_GRACEFUL_SHUTDOWN_TIMEOUT=10

# 最大併發請求數
MAX_CONCURRENT_REQUESTS=100

# ================================
# 跨域配置
# ================================

# 是否啟用 CORS
ENABLE_CORS=true

# 允許的來源
ALLOWED_ORIGINS=*

# 允許的 HTTP 方法
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# 允許的請求標頭
ALLOWED_HEADERS=*

# 是否允許傳送憑證
ALLOW_CREDENTIALS=false

# ================================
# 日誌配置
# ================================

# 日誌級別：debug, info, warn, error
LOG_LEVEL=info

# 日誌格式：text, json
LOG_FORMAT=text

# 是否啟用檔案日誌輸出
LOG_ENABLE_FILE=false

# 日誌檔案儲存路徑
LOG_FILE_PATH=./data/logs/app.log

# ================================
# 代理配置（可選）
# ================================

# HTTP 代理
# HTTP_PROXY=http://user:pass@proxy.example.com:8080

# HTTPS 代理
# HTTPS_PROXY=https://user:pass@proxy.example.com:8080

# 不需要代理的主機
# NO_PROXY=localhost,127.0.0.1,.local

# ================================
# 資料庫服務配置（如果使用外部資料庫）
# ================================

# MySQL 配置
MYSQL_ROOT_PASSWORD=123456
MYSQL_DATABASE=gpt_load
MYSQL_USER=gptload
MYSQL_PASSWORD=123456

# PostgreSQL 配置
POSTGRES_USER=gptload
POSTGRES_PASSWORD=123456
POSTGRES_DB=gpt_load

# Redis 配置
REDIS_PASSWORD=123456
